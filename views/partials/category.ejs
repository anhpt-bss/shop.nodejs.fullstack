<div class="category">

  <div class="container">

    <div class="category-item-container has-scrollbar">

      <% categories.filter(category => category.group).forEach( category=> { %>

      <div class="category-item">

        <div class="category-img-box">
          <img src="<%= category.thumbnail ? category.thumbnail.url : '/images/category-thumb.png' %>" alt="<%= category.thumbnail ? category.thumbnail.url : 'category-thumb' %>" width="30">
        </div>

        <div class="category-content-box">

          <div class="category-content-flex">
            <h3 class="category-item-title"><%= category.title %></h3>

            <p class="category-item-amount">(<%= category.productCount %>)</p>
          </div>

          <a href="/products/<%= category.slug %>" class="category-btn">Xem Danh Má»¥c</a>

        </div>

      </div>

      <% }) %>

    </div>

  </div>

</div>